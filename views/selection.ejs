<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/header.css" />
  <link rel="stylesheet" href="/css/footer.css" />
  <title>Selectie</title>
</head>
<body>

  <%- include("partials/header") %>

  <main class="selection-page">
    <section class="character-info-selection">
      <h1>Karakter</h1>
      <img src="<%= data.data[0].images.icon %>" alt="<%= data.data[0].name %>" class="character-selection-page" draggable="false" />
      <p id="character-name"><%= data.data[0].name %></p>
      <p><%= data.data[0].description %></p>
    </section>

    <section class="selection">
      <h2>Kies je wapen</h2>
      <form action="/selection" method="POST">

        <!-- Hidden inputs om characterId en characterImage mee te sturen -->
        <input type="hidden" name="characterId" value="<%= data.data[0].id %>" />
        <input type="hidden" name="characterImage" value="<%= data.data[0].images.icon %>" />

        <ul class="weapons">
          <li>
            <input type="radio" id="Assault_Rifle" name="weapon" value="Assault_Rifle" />
            <label for="Assault_Rifle">
              <img src="/assets/images/Assault_Rifle.webp" alt="Assault Rifle" />
            </label>
          </li>
          <li>
            <input type="radio" id="Mythic_Goldfish" name="weapon" value="Mythic_Goldfish" />
            <label for="Mythic_Goldfish">
              <img src="/assets/images/Mythic_Goldfish.webp" alt="Mythic Goldfish" />
            </label>
          </li>
          <li>
            <input type="radio" id="Rocket_Launcher" name="weapon" value="Rocket_Launcher" />
            <label for="Rocket_Launcher">
              <img src="/assets/images/Rocket_Launcher.webp" alt="Rocket Launcher" />
            </label>
          </li>
          <li>
            <input type="radio" id="Mammoth_Pistol" name="weapon" value="Mammoth_Pistol" />
            <label for="Mammoth_Pistol">
              <img src="/assets/images/Mammoth_Pistol.webp" alt="Mammoth Pistol" />
            </label>
          </li>
          <li>
            <input type="radio" id="Pump_Shotgun" name="weapon" value="Pump_Shotgun" />
            <label for="Pump_Shotgun">
              <img src="/assets/images/Pump_Shotgun.webp" alt="Pump Shotgun" />
            </label>
          </li>
          <li>
            <input type="radio" id="Sniper_Rifle" name="weapon" value="Sniper_Rifle" />
            <label for="Sniper_Rifle">
              <img src="/assets/images/Sniper_Rifle.webp" alt="Sniper Rifle" />
            </label>
          </li>
        </ul>

        <h2>Kies je emote</h2>
        <ul class="emotes">
          <% emotes.forEach(emote => { %>
            <li>
              <input type="radio" id="emote-<%= emote.name %>" name="emote" value="<%= emote.name %>" />
              <label for="emote-<%= emote.name %>">
                <img src="<%= emote.images.icon %>" alt="<%= emote.name %>" />
              </label>
            </li>
          <% }); %>
        </ul>

        <button type="submit">Verzenden</button>

      </form>
    </section>
  </main>

  <footer></footer>

</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/header.css" />
  <link rel="stylesheet" href="/css/footer.css" />
  <title>Blacklist</title>
</head>
<body id="detail-page">

  <%- include("partials/header") %>

  <main>
    <section class="character-selection">
      <h1>Blacklist</h1>
      <section class="character-details">

        <% if (data && data.length > 0) { %>
          <% data.forEach(character => { %>
            <article class="character-card">
              <a href="detail?id=<%= character.name %>">
                <img src="<%= character.images.icon %>" alt="<%= character.name %>" class="character" />
              </a>
              <% if (character.note && character.note.trim() !== "") { %>
                <p class="note">Notitie: <%= character.note %></p>
              <% } %>
              <form action="/blacklist/delete" method="POST" style="display:inline;">
                <input type="hidden" name="name" value="<%= character.name %>">
                <button  type="submit"   class="remove-button    aria-label="Verwijder uit blacklist">❌</button>
              </form>
            </article>
          <% }) %>
        <% } else { %>
          <p>Geen karakters geblacklistt</p>
        <% } %>

      </section>
    </section>
  </main>

  <footer></footer>

</body>
</html>
